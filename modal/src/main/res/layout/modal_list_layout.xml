<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/modal_root"
    android:background="@drawable/top_curved_header"
    android:orientation="vertical"
    android:layout_width="match_parent"
    style="@style/modal_root"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/close"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:padding="8dp"
        app:srcCompat="@drawable/ic_close_black_12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

    <ImageView
        android:id="@+id/icon"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="8dp"
        android:tint="#FF000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/title"
        android:textSize="16sp"
        android:textAlignment="center"
        android:gravity="center"
        android:padding="8dp"
        android:layout_toStartOf="@id/close"
        android:layout_toLeftOf="@id/close"
        android:layout_toEndOf="@id/icon"
        android:text=""
        android:textColor="@color/modal_title"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icon" />

    <LinearLayout
        android:layout_below="@id/close"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:id="@+id/listItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:autoLink="all"
        android:linksClickable="true"
        android:id="@+id/text"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_below="@id/listItems"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:textColor="@color/modal_text_icon"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />

    <TextView
        android:id="@+id/action"
        android:layout_below="@id/text"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/black_faded"
        android:layout_marginTop="24dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:minWidth="150dp"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/bottom_button"
        android:text="@string/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>